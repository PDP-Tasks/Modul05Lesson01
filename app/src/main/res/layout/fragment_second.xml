<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.SecondFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="1.json"
        android:layout_weight="12"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Say Hello to"
        android:gravity="center_horizontal|bottom"
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:id="@+id/tv_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Global Top-Up"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:id="@+id/tv_2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Send mobile top-up more than 500 networks"
        android:layout_margin="5dp"
        android:gravity="center_horizontal|bottom"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:id="@+id/tv_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="in over 140 countries"
        android:padding="5dp"
        android:gravity="center_horizontal|top"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:id="@+id/tv_4"/>


</LinearLayout>